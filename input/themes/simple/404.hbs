{{> head}}
{{> top}}
<main class="error">
    <section class="hero error__hero">
        {{#checkIfAll @config.custom.uploadHero @config.custom.displayHeroImage}}
            {{#if @config.custom.uploadHeroCaption}}
                <figure class="hero__wrap">
                    <img                       
                        src="{{@config.custom.uploadHero}}"
                        {{responsiveSrcSet @config.custom.uploadHero}}
                        {{responsiveSizes}}
                        alt="{{@config.custom.uploadHeroAlt}}">
                    <figcaption>
                        {{@config.custom.uploadHeroCaption}}
                    </figcaption>
                </figure>
            {{else}}
                <div class="hero__wrap">
                    <img
                        src="{{@config.custom.uploadHero}}"
                        {{responsiveSrcSet @config.custom.uploadHero}}
                        {{responsiveSizes}}
                        alt="{{@config.custom.uploadHeroAlt}}">
                </div>
            {{/if}}
        {{/checkIfAll}}
        <header class="hero__text error__text">
            <hgroup>
                <h1>{{ translate 'error.404' }}</h1>
                <h2>{{ translate 'error.message1' }}</h2>
            </hgroup>
        </header>
    </section>
</main>
{{> footer}}
